<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    tools:context="com.developers.droidteam.merisafety.SelfDefenceFragment">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >
        <LinearLayout
            android:padding="14dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="SELF-DEFENSE"
                android:textColor="#000"
                android:textAlignment="center"
                android:textSize="40sp"/>
            <ViewFlipper
                android:id="@+id/simpleViewFlipper"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
            </ViewFlipper>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="20sp"
                android:textAlignment="center"
                android:textColor="#000"
                android:text="The condition of being protected from or unlikely to cause danger, risk, or injury is safety."/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="20sp"
                android:textAlignment="center"
                android:textColor="#000"
                android:text="The defence of one's person or interests, especially through the use of physical force, which is permitted in certain cases as an answer to a charge of violent crime."/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="20sp"
                android:textAlignment="center"
                android:textColor="#000"
                android:text="Five Self-Defenence moves you must know."/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="20sp"
                android:textAlignment="center"
                android:textColor="#000"
                android:text="1.Open Hand Strilke"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="20sp"
                android:textAlignment="center"
                android:textColor="#000"
                android:text="2.Kick to the groin"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="20sp"
                android:textAlignment="center"
                android:textColor="#000"
                android:text="3.360 or outside defence"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="20sp"
                android:textAlignment="center"
                android:textColor="#000"
                android:text="4.Handbag grab or any aggressive grab"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="20sp"
                android:textAlignment="center"
                android:textColor="#000"
                android:text="5.Attack from the ground"/>
        </LinearLayout>
    </ScrollView>

</LinearLayout>
